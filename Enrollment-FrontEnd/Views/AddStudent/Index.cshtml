@model IEnumerable<Enrollment_FrontEnd.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Dashboard" />


<center>
    <h3> Enrolled Students </h3>
</center>



<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parish.ParishName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programme.ProgrammeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shirt.SizeName)
            </th>
            <th>
                Image
            </th>

            <th>
                <p>
                    <a asp-action="Create" class="btn btn-sm btn-success">Enroll New
                        <i class="fa-sharp fa-solid fa-pen-to-square"></i>
                    </a>
                </p>
              
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parish.ParishName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Programme.ProgrammeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shirt.SizeName)
            </td>

            <td width="10%">
                <a href="@item.StudentIdImageFilePath" target="_blank">View</a>
            </td>

            <td>
                <div class=" btn-group w-75">
                    <!--Align buttons-->
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                        <i class="fa-sharp fa-solid fa-pen-to-square"></i>
                    </a>

                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                        <i class="fa-solid fa-circle-info"></i>
                    </a>


                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                        <i class="far fa-trash-alt"></i>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

