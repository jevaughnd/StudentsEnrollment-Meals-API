@model Enrollment_FrontEnd.Models.ViewModel.MealOrderVM

@{
    ViewData["Title"] = "Edit";
}





<hr />

<div class="container row-cols-md-3  d-flex justify-content-center align-items-center ">


    <form asp-action="Edit" class="Razor-Form order-form">


        <center>
            <h3>Update Meal Order</h3>
        </center>


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        @* <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
        </div>*@

        <div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="StudentId" class="control-label"></label>
            <select asp-for="SelectedStudentId" class="form-control" asp-items="@Model.StudentSelectList">
                <option disabled selected> -- Select Student Name -- </option>
            </select>
            <span asp-validation-for="SelectedStudentId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProgrammeId" class="control-label"></label>
            <select asp-for="SelectedProgrammeId" class="form-control" asp-items="@Model.ProgrammeSelectList">
                <option disabled selected> -- Select Student Programme -- </option>
            </select>
            <span asp-validation-for="SelectedProgrammeId" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="MealTypeId" class="control-label"></label>
            <select asp-for="SelectedMealItemId" class="form-control" asp-items="@Model.MealItemsList">
                <option disabled selected> -- Select Meal type-- </option>
            </select>
            <span asp-validation-for="SelectedMealItemId" class="text-danger"></span>
        </div>



        <!--Food Items-->
        <div class="form-group">
            <label asp-for="MeatOptionId" class="control-label"></label>
            <select asp-for="SelectedMeatItemId" class="form-control" asp-items="@Model.MeatItemsList">
                <option disabled selected> -- Select Meat -- </option>
            </select>
            <span asp-validation-for="SelectedMeatItemId" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="StarchOptionId" class="control-label"></label>
            <select asp-for="SelectedStarchItemId" class="form-control" asp-items="@Model.StarchItemsList">
                <option disabled selected> -- Select Starch -- </option>
            </select>
            <span asp-validation-for="SelectedStarchItemId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SideOptionId" class="control-label"></label>
            <select asp-for="SelectedSideItemId" class="form-control" asp-items="@Model.SideItemsList">
                <option disabled selected> -- Select Side -- </option>
            </select>
            <span asp-validation-for="SelectedSideItemId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BeverageOptionId" class="control-label"></label>
            <select asp-for="SelectedBeverageItemId" class="form-control" asp-items="@Model.BeverageItemsList">
                <option disabled selected> -- Select Beverage -- </option>
            </select>
            <span asp-validation-for="SelectedBeverageItemId" class="text-danger"></span>
        </div>




        <div class="form-group row-cols-md-1">
            <input type="submit" value="Update Order" class="btn btn-primary FormBtn" />
        </div>

    </form>

</div> <!------------>


