<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Enrollment_FrontEnd</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Enrollment_FrontEnd.styles.css" asp-append-version="true" />


    <link rel=" stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/DashBoard.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'> <!--box icons-->

</head>
<body>
    <header class="style-header">
   
        
      @*<nav class="  navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ">*@
        <nav class="  navbar navbar-expand-sm navbar-toggleable-sm navbar-light  box-shadow mb-3 ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <h2 class="home-header-logo" style="color:white">amber</h2>  </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1  position-absolute top-50 start-50 translate-middle  ">



                        <li class="nav-item">
                            <a class="nav-head-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-head-link" asp-area="" asp-controller="AddStudent" asp-action="Create">Enroll</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-head-link" asp-area="" asp-controller="Home" asp-action="MenuDisplay">Todays Menu</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-head-link" asp-area="" asp-controller="OrderMeal" asp-action="Create">Order Meal</a>
                        </li>

                        

                        @*<li class="nav-item">
                            <a class="nav-head-link" asp-area="" asp-controller="OrderMeal" asp-action="Index">Kitchen</a>
                        </li>*@

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class=" nav-head-link loginLink" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                            </li>
                        </ul>
                    </ul>

                    
                       
                </div>


            </div>
        </nav>
        
       
        
    </header>
    
    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div>
            &copy; 2023 - Enrollment_FrontEnd - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
